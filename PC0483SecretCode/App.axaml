<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PC0483SecretCode.App"
             xmlns:local="using:PC0483SecretCode"
             xmlns:converter="using:PC0483SecretCode.Converters"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://PC0483SecretCode/Styles/ButtonSidebarStyles.axaml"/>
        <StyleInclude Source="avares://PC0483SecretCode/Styles/TextInput.axaml"/>
        <StyleInclude Source="avares://PC0483SecretCode/Styles/ButtonStyles.axaml"/>
        <StyleInclude Source="avares://PC0483SecretCode/Styles/ToggleButtonStyles.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://PC0483SecretCode/Styles/Themes.axaml" />
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
        
        <converter:BoolToTextConverter x:Key="BoolToTextConverter"/>
    </Application.Resources>
    
    
</Application>